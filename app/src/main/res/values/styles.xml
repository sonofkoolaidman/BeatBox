<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lime</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/magenta</item>
        
        <item name="android:windowBackground">@color/pink</item>
        <item name="buttonStyle">@style/BeatBoxButton</item>
    </style>

    <!-- a style for our sound buttons -->
    <style name="BeatBoxButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_beat_box</item>
    </style>
    

</resources>
